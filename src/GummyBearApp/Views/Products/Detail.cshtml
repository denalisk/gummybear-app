@model GummyBearApp.Models.GummyBear

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="detail-holder">
    <div class="col-md-6">
        <div class="image-holder">
            <img src="@Model.ImageSrc" alt="@Model.ImageAlt" />
        </div>
    </div>
    <div class="col-md-6">
        <h3>This is one of our most popular gummies! The @Model.Name gummy bear is delicious and frequently reminds people of the best times in life.</h3>
        <h4>Price: $ @Model.Cost per bear</h4>
        <h4>Country of origin: @Model.Country</h4>
    </div>

</div>