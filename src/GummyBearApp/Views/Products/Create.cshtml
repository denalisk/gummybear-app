@model GummyBearApp.Models.GummyBear

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    <div class="well">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h2>A new bear!</h2>
                @Html.HiddenFor(model => model.GummyBearId)

                @Html.LabelFor(model => model.Name)
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
            </div>
            <div class="panel-body">
                @Html.LabelFor(model => model.Country)
                @Html.TextBoxFor(model => model.Country, new { @class = "form-control" })

                @Html.LabelFor(model => model.Cost)
                @Html.TextBoxFor(model => model.Cost, new { @class = "form-control" })

                @Html.LabelFor(model => model.ImageSrc)
                @Html.TextBoxFor(model => model.ImageSrc, new { @class = "form-control" })

                @Html.LabelFor(model => model.ImageAlt)
                @Html.TextBoxFor(model => model.ImageAlt, new { @class = "form-control" })
            </div>
            <div class="panel-heading">
                <div class="spacer">
                    <input class="btn btn-success" type="submit" value="Add Bear" />
                </div>
            </div>
        </div>
    </div>
}
